extends layouts/base
block header
  include components/navbar
block main
  each category in categories
    include /components/category/hero

    section.section
      .container
        each row in [1, 2]
          .columns
            each column in [1, 2, 3, 4]
              - var post = category.posts[row * column - 1]
              .column
                include components/post-card

    include components/category/pagination
block footer
  include components/footer
